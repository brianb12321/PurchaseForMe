{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2016",
    "lib": [ "ES2016", "DOM" ],
    "esModuleInterop": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "src/_build"
  },
    "include": [
        "src/**/*"
    ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}